<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimaryDark">


  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:title=" "
    app:navigationIcon="@drawable/ic_back"
    app:popupTheme="@style/AppTheme.PopupOverlay"/>


  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/imgPoster"
    android:layout_width="90dp"
    android:layout_height="110dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_below="@+id/toolbar"
    android:transitionName="shared_logo"
    app:srcCompat="@drawable/movie_placeholder"/>

  <TextView
    android:id="@+id/txtName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/toolbar"
    android:layout_toRightOf="@+id/imgPoster"
    android:padding="1dp"
    android:textColor="@color/black"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/txtYear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/txtName"
    android:layout_toRightOf="@+id/imgPoster"
    android:padding="1dp"
    android:textColor="@color/black"/>


  <RatingBar
    android:id="@+id/ratingBar1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_below="@+id/imgPoster"
    android:padding="1dp"
    android:theme="@style/RatingBar"
    android:isIndicator="true"
    android:numStars="5"
    android:stepSize="0.1"/>

  <TextView
    android:id="@+id/txtGenre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/ratingBar1"
    android:padding="1dp"
    android:textColor="@color/black"/>

  <TextView
    android:id="@+id/txtDirector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/txtGenre"
    android:padding="1dp"
    android:textColor="@color/black"/>


  <TextView
    android:id="@+id/txtActors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/txtDirector"
    android:padding="1dp"
    android:textColor="@color/black"/>


</RelativeLayout>